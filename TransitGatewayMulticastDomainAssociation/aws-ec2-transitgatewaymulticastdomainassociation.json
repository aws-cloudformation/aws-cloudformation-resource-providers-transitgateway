{
    "typeName": "AWS::EC2::TransitGatewayMulticastDomainAssociation",
    "description": "Describes the resources associated with the transit gateway multicast domain.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-transitgateway.git",
    "definitions": {
        "SubnetAssociation": {
            "type": "object",
            "properties": {
                "state": {
                    "description": "The state of the subnet association",
                    "type": "string",
                    "enum": [
                        "associating",
                        "associated",
                        "disassociating",
                        "disassociated"
                    ]
                },
                "subnetId": {
                    "description": "The ID of the subnet",
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "resourceId": {
            "description": "The ID of the resource",
            "type": "string"
        },
        "resourceType": {
            "description": "The type of resource, for example a VPC attachment.",
            "type": "string",
            "enum": [
                "vpc",
                "vpn",
                "direct-connect-gateway",
                "tgw-peering"
            ]
        },
        "subnet": {
            "description": "The subnet associated with the transit gateway multicast domain",
            "$ref": "#/definitions/SubnetAssociation"
        },
        "transitGatewayAttachmentId": {
            "description":"The ID of the transit gateway attachment.",
            "type": "string"
        },
        "transitGatewayMulticastDomainId": {
            "description": "The ID of the transit gateway multicast domain.",
            "type": "string"
        },
        "SubnetIds": {
            "description": "The IDs of the subnets to associate with the transit gateway multicast domain.",
            "type":"array",
            "contains": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "transitGatewayAttachmentId",
        "transitGatewayMulticastDomainId",
        "SubnetIds"
    ],

    "createOnlyProperties": [
        "/properties/transitGatewayAttachmentId",
        "/properties/transitGatewayMulticastDomainId",
        "/properties/SubnetIds"
    ],
    "primaryIdentifier": [
        "/properties/transitGatewayMulticastDomainId",
        "/properties/transitGatewayAttachmentId",
        "/properties/subnet"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "ec2:AssociateTransitGatewayMulticastDomain"
            ]
        },
        "read": {
            "permissions": [
                "ec2:DescribeTransitGatewayAttachments",
                "ec2:GetTransitGatewayMulticastDomainAssociations"
            ]
        },
        "delete": {
            "permissions": [
                "ec2:DisassociateTransitGatewayMulticastDomain"
            ]
        },
        "list": {
            "permissions": [
                "ec2:DescribeTransitGatewayAttachments",
                "ec2:GetTransitGatewayMulticastDomainAssociations"
            ]
        }
    }
}

